<!-- Hero Section -->
<section class="hero-modern-location">
    <div class="container">
        <div class="hero-grid-location">
            <!-- Left Content -->
            <div class="hero-content-location">
                <div class="hero-badge-location">
                    <span class="badge-dot"></span>
                    #1 Rated in {{ city }}
                </div>
                
                <h1 class="hero-title-location">
                    {{ city }}, {{ stateAbbreviations[stateSlug] }} Mattress
                    <span class="title-highlight">Removal & Recycling</span>
                </h1>
                
                <p class="hero-subtitle-location">
                    1M+ Mattresses Diverted from Landfills ‚Ä¢ Next-Day Service Available ‚Ä¢ Licensed & Insured in {{ state }}
                </p>
                
                <p class="hero-description-location">
                    {{ pageContent.heroDescription }}
                </p>
                
                <div class="hero-action-section">
                    <!-- Single cohesive CTA flow -->
                    <button type="button" class="btn-primary-large-location zenbooker-inline-button" onclick="Zenbooker.showPopupWidget('https://widget.zenbooker.com/book/1607719749466x229623059118359230?embed=true');return false;">
                        <span>Book Curbside Pickup</span>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </button>
                    
                    <!-- Booking features directly below button -->
                    <div class="booking-features">
                        <span>Book online in 60 seconds ‚Ä¢ 100% upfront pricing</span>
                    </div>
                    
                    <!-- Social proof -->
                    <div class="social-proof-location">
                        <div class="rating-location">
                            <div class="stars-location">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</div>
                            <span class="rating-text-location">4.9/5 ‚Ä¢ {{ reviews.count }} {{ city }} reviews</span>
                        </div>
                    </div>
                    
                    <div class="cta-benefits-integrated">
                        <div class="benefit-item">üí∞ Half price of major junk companies</div>
                        <div class="benefit-item">‚ôªÔ∏è 1M+ mattresses recycled</div>
                    </div>
                    
                    <div class="commercial-option">
                        <span>Need bulk removal? </span>
                        <a href="/commercial/" class="commercial-link">Get Commercial Quote ‚Üí</a>
                    </div>
                </div>
            </div>
            
            <!-- Right Image Collage -->
            <div class="hero-image-location">
                <div class="image-collage-location">
                    <div class="collage-item-location collage-main-location">
                        <img src="/images/lifestyle/mattress-pickup-team-1-400.png"
                             srcset="/images/lifestyle/mattress-pickup-team-1-200.png 200w, /images/lifestyle/mattress-pickup-team-1-400.png 400w, /images/lifestyle/mattress-pickup-team-1.png 720w"
                             sizes="(max-width: 768px) 200px, 400px"
                             alt="Professional mattress pickup team in {{ city }}" width="400" height="300" loading="eager">
                    </div>
                    <div class="collage-item-location collage-secondary-location">
                        <img src="/images/lifestyle/mattress-recycling-facility.webp" alt="Eco-friendly recycling facility" width="400" height="300" loading="eager">
                    </div>
                    <div class="collage-item-location collage-tertiary-location">
                        <img src="/images/lifestyle/mattress-removal-3-400.png"
                             srcset="/images/lifestyle/mattress-removal-3-200.png 200w, /images/lifestyle/mattress-removal-3-400.png 400w, /images/lifestyle/mattress-removal-3.png 720w"
                             sizes="(max-width: 768px) 200px, 400px"
                             alt="Residential mattress removal in {{ city }}" width="400" height="300" loading="eager">
                    </div>
                    <div class="collage-item-location collage-fourth-location">
                        <img src="/images/lifestyle/bulk-commercial-mattress-removal-400.png"
                             srcset="/images/lifestyle/bulk-commercial-mattress-removal-200.png 200w, /images/lifestyle/bulk-commercial-mattress-removal-400.png 400w, /images/lifestyle/bulk-commercial-mattress-removal.png 720w"

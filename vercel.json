{
  "version": 2,
  "buildCommand": "npm run build:prod",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": null,
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {},
  "routes": [
    {
      "src": "/sitemap.xml",
      "headers": {
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/robots.txt",
      "headers": {
        "cache-control": "public, max-age=86400"
      }
    },
    {
      "src": "/(css|js|images)/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": true
}
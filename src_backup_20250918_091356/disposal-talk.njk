<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title">Disposal Talk</h1>
            <p class="hero-subtitle">Your complete guide to responsible mattress and furniture disposal</p>
            <div class="hero-stats">
                <div class="stat">
                    <strong>{{ collections.servicePosts | length }}</strong>
                    <span>Expert Guides</span>
                </div>
                <div class="stat">
                    <strong>50+</strong>
                    <span>Cities Covered</span>
                </div>
                <div class="stat">
                    <strong>1M+</strong>
                    <span>Items Recycled</span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="disposal-content">
    <div class="container">
        <!-- Search/Filter Section -->
        <div class="filter-section">
            <div class="search-box">
                <input type="text" id="searchPosts" placeholder="Search disposal guides..." aria-label="Search posts">
                <button type="button" aria-label="Search">üîç</button>
            </div>
            <div class="filter-tabs">
                <button class="filter-btn active" data-filter="all">All Guides</button>
                <button class="filter-btn" data-filter="mattress">Mattress Disposal</button>
                <button class="filter-btn" data-filter="furniture">Furniture Disposal</button>
                <button class="filter-btn" data-filter="recycling">Recycling Info</button>
                <button class="filter-btn" data-filter="diy">DIY Guides</button>
            </div>
        </div>

        <!-- Posts Grid -->
        <div class="posts-grid" id="postsGrid">
            {% for post in collections.servicePosts %}
            <article class="post-card" data-category="{% if 'mattress' in post.data.title.toLowerCase() %}mattress{% elif 'couch' in post.data.title.toLowerCase() or 'furniture' in post.data.title.toLowerCase() %}furniture{% elif 'recycle' in post.data.title.toLowerCase() or 'diy' in post.data.title.toLowerCase() %}recycling{% else %}mattress{% endif %}">
                <div class="post-content">
                    <h2 class="post-title">
                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                    </h2>

                    {% if post.data.date %}
                    <time class="post-date" datetime="{{ post.data.date }}">
                        {{ post.data.date | dateFormat }}
                    </time>
                    {% endif %}

                    <div class="post-excerpt">
                        {% if 'mattress' in post.data.title.toLowerCase() %}
                            {% if 'how to get rid' in post.data.title.toLowerCase() %}
                                Local mattress disposal options and recycling services.
                            {% else %}
                                Professional mattress removal and disposal guide.
                            {% endif %}
                        {% elif 'couch' in post.data.title.toLowerCase() %}
                            Complete guide to couch and sofa disposal options.
                        {% elif 'box spring' in post.data.title.toLowerCase() %}
                            Box spring removal and recycling information.
                        {% elif 'bed frame' in post.data.title.toLowerCase() %}
                            Bed frame disposal and recycling guide.
                        {% elif 'diy' in post.data.title.toLowerCase() %}
                            Step-by-step DIY recycling instructions.
                        {% else %}
                            Professional disposal and recycling guidance.
                        {% endif %}
                    </div>

                    <div class="post-meta">
                        {% if 'mattress' in post.data.title.toLowerCase() %}
                            <span class="post-category mattress">Mattress Disposal</span>
                        {% elif 'couch' in post.data.title.toLowerCase() or 'furniture' in post.data.title.toLowerCase() %}
                            <span class="post-category furniture">Furniture Disposal</span>
                        {% elif 'diy' in post.data.title.toLowerCase() or 'recycle' in post.data.title.toLowerCase() %}
                            <span class="post-category recycling">Recycling Info</span>
                        {% else %}
                            <span class="post-category mattress">Disposal Guide</span>
                        {% endif %}

                        {% if post.data.title.toLowerCase().includes('al') or post.data.title.toLowerCase().includes('tx') or post.data.title.toLowerCase().includes('ca') or post.data.title.toLowerCase().includes('ny') %}
                            <span class="post-location">üìç Local Guide</span>
                        {% endif %}
                    </div>
                </div>
            </article>
            {% endfor %}
        </div>

        <!-- Load More Button -->
        <div class="load-more-section" style="display: none;">
            <button class="btn btn-secondary" id="loadMoreBtn">Load More Guides</button>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section">
    <div class="container">
        <div class="cta-content">
            <h2>Need Professional Removal Service?</h2>
            <p>Skip the hassle and let our experts handle your mattress or furniture disposal. Licensed, insured, and eco-friendly service nationwide.</p>
            <div class="cta-buttons">
